{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "website",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm run generate:css --minify",
    "dev": "ENV=dev pnpm run \"/^dev:.*/\"",
    "dev:server": "go run ./...",
    "dev:tailwind": "pnpm run generate:css --watch",
    "format": "prettier --write . --ignore-path .gitignore --plugin-search-dir=.",
    "generate:css": "tailwindcss -i ./tailwind.css -o ./public/style.css"
  },
  "devDependencies": {
    "@radix-ui/colors": "^1.0.1",
    "@tailwindcss/typography": "^0.5.9",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "tailwindcss": "^3.3.3",
    "windy-radix-palette": "^0.6.1",
    "windy-radix-typography": "^0.2.1"
  }
}
