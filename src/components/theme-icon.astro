---
export type Props = {
	variant: "light" | "dark" | "auto";
};
---

<svg
	aria-hidden="true"
	class="pointer-events-none absolute left-2 top-1/2 h-5 w-5 -translate-y-1/2"
>
	<use
		href={"/icons/20-solid.svg#" +
			{
				auto: "computer-desktop",
				light: "sun",
				dark: "moon",
			}[Astro.props.variant]}></use>
</svg>
