---
import BaseLayout from "~/layouts/BaseLayout.astro";
---

<BaseLayout>
	<div
		class="mx-auto flex w-full max-w-4xl flex-1 flex-col justify-center px-4 py-32"
	>
		<p class="text-lg text-lo-contrast">404</p>
		<h1 class="mt-4 text-4xl font-bold">Not found</h1>
		<p class="mt-6 text-lg text-lo-contrast">
			Sorry, the page you're looking for doesn't exist.
		</p>
		<div class="mt-8">
			<a
				href="/"
				class="inline-flex select-none items-center gap-2 rounded-md bg-gradient-to-b from-jade-9 to-jade-8 px-3 py-2 text-base text-white shadow-inner shadow-white/20 ring-1 ring-jade-8 transition-colors hover:to-jade-7 focus:outline-none focus:ring-2 focus:ring-focus-ring focus:ring-offset-1 focus:ring-offset-white active:from-jade-8 active:to-jade-9 dark:focus:ring-offset-sand-1"
			>
				<svg class="h-5 w-5">
					<use href="/icons/20-solid.svg#arrow-long-left"></use>
				</svg>
				 Return to the homepage
			</a>
		</div>
	</div>
</BaseLayout>
